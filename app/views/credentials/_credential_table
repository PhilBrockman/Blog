<% if credentials.count <= 0 %>
	No credentials found
<% else %>
<%= form_tag({action: :email_me, controller: :teachers}) do %>
	<table class="table table-bordered">
		<thead>
		  <tr>
		  	<td></td>
		    <td>Credential Name</td>
		    <td>Web Link</td>
		    <td>Notes</td>
	    </tr>
	  </thead>
	  <tbody>
		<% credentials.each do |c| %>
			<tr> 
				<td><%= check_box_tag "teacher[credential_ids][]", c.id, true%></td>
			  	<%= render partial: "credentials/credential", locals: {credential: c} %>
		  	</tr>
		<% end %>
	  </tbody>
	</table>
	<%= submit_tag %>
<% end %>

<% end %>