<% edit = false if local_assigns[:edit].nil? %>
<table class="table table-bordered">
	<thead>
	  <tr>
	    <td><%= table_header %></td>
	    <td>Web Link</td>
	    <td>Notes</td>
	    <% if edit %>
	    <td></td>
	    <td></td>
	    <% end %>
    </tr>
  </thead>
  <tbody>
	<% credentials.each do |c| %>
		<tr> 
		  	<%= render partial: "credentials/credential", locals: {credential: c} %>
	    <% if edit %>
	    <td><%= link_to 'edit', edit_credential_path(c) %></td>
	    <td><%= link_to 'Destroy', c, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	    <% end %>
	  	</tr>
	<% end %>
  </tbody>
</table>